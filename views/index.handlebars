<div class="container">

    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#"><img class="logo" src="https://i.ibb.co/JvVMnVS/tracking.png"
                alt="">GameDar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a id="createAccount" class="nav-link" href="./createUser"> Create Account <span
                            class="sr-only"></span></a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container loginContainer">

        <div id="logoHolder">
            <img id="loginLogo" src="https://i.ibb.co/JvVMnVS/tracking.png" alt="">
        </div>

        <div id="inputFields">
            <form>

                <div class="col">
                    <input type="text" class="form-control" id="username" placeholder="Username">
                </div>
                <div class="col">
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>

            </form>
            <div id="submitLogin">
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </div>
        </div>

        <div id="sportIcons">
            <img class="pics" src="https://i.ibb.co/yFgmK9r/basketball.png" alt="">
            <img class="pics" src="https://i.ibb.co/QHhMLGX/football.png" alt="">
            <img class="pics" src="https://i.ibb.co/ncMTVxw/baseball.png" alt="">
        </div>

    </div>


</div>

<script>

    $(".btn-lg").click(function () {
        var credentials = {
            username: $("#username").val().trim(),
            password: $("#password").val().trim()
        }
        
        axios.post('/auth/login', credentials).
        then(function(resp){
            localStorage.setItem('token', resp.token)
            window.location.assign('./viewCourts')
        }).catch(function(err){
            console.log(err);
        })

        

    })


</script>